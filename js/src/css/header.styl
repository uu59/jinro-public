header-height = 48px

.app__header
  min-height: header-height

.header
  &--nologin
    .header__login
      float: right
      color: inherit
      display: block
      .fa
        color: #e0e0e0
        font-size: 24px
        padding-right: 4px

  &, &--nologin, &--loggedin
    clearfix()
    border-block-separation(border-bottom)
    height: header-height

    > *
      padding: 0 1ex
      box-sizing: border-box
      line-height: header-height
      > *
        line-height: header-height
        vertical-align: middle

    .help
      float: right
      font-size: 16px
      .fa
        cursor: pointer
      &--opened
        position: fixed
        top: 0
        left: 0
        width: 100%
        height: 100%
        z-index: 1
        padding: 0
        > *
          position: fixed
      &__overlay
        background: #000
        opacity: 0.7
        width: 100%
        height: 100%
        display: flex
      &__content
        whitearea()
        opacity: 1
        border-radius: 3px
        padding: 1em
        margin: auto
        left: 10%
        top: 10%
        width: 80%
        height: 80%
        overflow: auto
        h1:first-child
          margin-top: 0

    &__linktop
      vertical-align: middle
      float: left
      a
        color: white
        text-decoration: none
    .header__me
      float: right
      imageInlineBlock(32px)
